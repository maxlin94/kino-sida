<% movies.map(movie=> { %>
    <div class="grid grid-row-3 place-items-center text-center">
        <img class="h-5/6 max-h-[500px] px-8 object-cover" src="<%= movie.attributes.image.url %>" alt="">
        <h2 class="text-4xl font-bold text-white">
            <%= movie.attributes.title %>
        </h1>
        <p class="text-1xl text-white w-2/3 py-4">
            <%= movie.attributes.intro %>
        </p>

        <button class="px-4 py-2 mt-4 text-2xl font-bold text-white bg-secondary rounded hover:bg-secondary-hover"><a
                href="<%= href + movie.id %>"><%= btnText %></a></button>
    </div>
<% }).join('') %>