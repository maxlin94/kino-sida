<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta lang="sv">
    <title>Bihjografen</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/output.css'>
    <script src="/reviews.js" type="module" defer></script>
    <script src="/screenings.js" type="module" defer></script>
    <script src="/postReview.js" type="module" defer></script>
</head>

    <body class="bg-body">
        <main class="grid-20-1fr gap-y-8 min-h-full w-full bg-primary absolute">
            <%- include('./partials/sidebar', { active: '/movies' }) %>
            <div class="flex flex-col items-center">
                <%- include('./partials/getMovies', { movies: [movie], hrefText: 'Boka' , href: '/booking/' , showIntro: true }) %>
                <%- include('./partials/screenings') %>
                <%- include('./partials/reviews') %>
                <%- include('./partials/reviewForm') %>
            </div>
        </main>
    </body>

    <template id="review-template">
        <li class="reviewItem flex flex-col justify-center h-20 px-2 py-2 text-left rounded-sm text-base bg-primary text-white">
            <p class="author font-bold"></p>
            <p class="comment"></p>
            <span class="rating"></span>
        </li>
    </template>

    <template id="screening-template">
        <div class="screening flex flex-col p-2 text-center text-white">
            <p class="room font-semibold"></p>
            <p class="date"></p>
        </div>
    </template>
</html>